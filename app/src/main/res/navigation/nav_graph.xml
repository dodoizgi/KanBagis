<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.dodo.kanbagis.fragment.SplashFragment"
        android:label="@string/splash_fragment_label"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_SplashFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
        <action
            android:id="@+id/action_SplashFragment_to_AnnouncementFragment"
            app:destination="@id/AnnouncementFragment" />
    </fragment>

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.dodo.kanbagis.fragment.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_AnnouncementFragment"
            app:destination="@id/AnnouncementFragment" />
    </fragment>

    <fragment
        android:id="@+id/AnnouncementFragment"
        android:name="com.dodo.kanbagis.fragment.AnnouncementFragment"
        android:label="@string/announcement_fragment_label"
        tools:layout="@layout/fragment_announcement">

    </fragment>

    <fragment
        android:id="@+id/AddFragment"
        android:name="com.dodo.kanbagis.fragment.AddFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_add">
        <action
            android:id="@+id/action_AddFragment_to_AnnouncementFragment"
            app:destination="@id/AnnouncementFragment" />
    </fragment>

    <navigation android:id="@+id/ProfileNavigation"
        app:startDestination="@id/ProfileFragment">
        <fragment
            android:id="@+id/ProfileFragment"
            android:name="com.dodo.kanbagis.fragment.ProfileFragment"
            android:label="@string/profile_fragment"
            tools:layout="@layout/fragment_profile">
            <action
                android:id="@+id/action_ProfileFragment_to_SettingsFragment"
                app:destination="@id/SettingsFragment" />
            <action
                android:id="@+id/action_ProfileFragment_to_MessageFragment"
                app:destination="@id/MessageFragment" />
            <action
                android:id="@+id/action_ProfileFragment_to_AccountFragment"
                app:destination="@id/AccountFragment" />
            <action
                android:id="@+id/action_ProfileFragment_to_MyDonationFragment"
                app:destination="@id/MyDonationFragment" />
            <action
                android:id="@+id/action_ProfileFragment_to_LoginFragment"
                app:destination="@id/LoginFragment" />
        </fragment>

        <fragment
            android:id="@+id/AccountFragment"
            android:name="com.dodo.kanbagis.fragment.AccountFragment"
            android:label="@string/account_fragment"
            tools:layout="@layout/fragment_account"/>

        <fragment
            android:id="@+id/MessageFragment"
            android:name="com.dodo.kanbagis.fragment.MessagesFragment"
            android:label="@string/message_fragment"
            tools:layout="@layout/fragment_messages"/>

        <fragment
            android:id="@+id/SettingsFragment"
            android:name="com.dodo.kanbagis.fragment.SettingsFragment"
            android:label="@string/setting_fragment"
            tools:layout="@layout/fragment_settings"/>

        <fragment
            android:id="@+id/MyDonationFragment"
            android:name="com.dodo.kanbagis.fragment.MyDonationBloodsFragment"
            android:label="@string/setting_fragment"
            tools:layout="@layout/fragment_my_donation_bloods"/>

    </navigation>

</navigation>